<% unless @issues.empty? -%>
  <ul>
    <% @issues.each do |issue| -%>
      <li>
        <%= link_to "( #{ issue.id } ) '#{ issue.subject }' ", issue_path(issue) %> assigned to: <%= issue.assigned_to ? link_to_user(issue.assigned_to) : "-" %>
      </li>
    <% end -%>
  </ul>
<% else -%>
  <p>Sorry, no issues for that period</p>
<% end -%>
